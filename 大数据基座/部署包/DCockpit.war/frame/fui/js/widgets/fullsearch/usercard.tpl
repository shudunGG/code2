<div class="sender-baseinfo clearfix">
    <div class="sender-portrait"><img src="{{portrait}}" alt="portrait"  style="width:80px;height:80px"/></div>
    <p class="name">{{name}}</p>
    <p class="dept">部门 <span class="text">{{dept}}</span></p>
    <p class="duty">职务 <span class="text">{{position}}</span></p>
</div>
<div class="sender-contact clearfix">
    <div class="contact-item">
        <img src="./image/icon-phone.png"/>
        <span class="contact-phone">{{telephoneOffice}}</span>
    </div>
    <div class="contact-item">
        <img src="./image/icon-mobile.png" />
        <span class="contact-phone">{{email}}</span>
    </div>
</div>